<% if current_user %>
  <% if current_user.errors.any? %>
     <div id="error_explanation" >
       <h2><%= pluralize(current_user.errors.count, "Error") %>: </h2>
         <ul>
           <% current_user.errors.full_messages.each do |message| %>
             <li><%= message %></li><br>
               <% end %>
        </ul>
     </div>
   <% end %>
<% else %>
  <h1 style= "color:red">Missing Fields</h1>
<% end %>
