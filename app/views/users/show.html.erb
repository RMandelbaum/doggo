<div class = "container">
  <div class = "info">
      <h2><%= current_user.username %></h2>

      <% if current_user.bio.empty? || current_user.references.empty? %>

        <%= render 'form' %>
      <% else %>
        <ul>
          <%= current_user.references.each do |reference| %>
              <li>reference.name</li>
              <li>reference.phone_number</li>
              <li>reference.email</li>
            <% end %>
        </ul>
      <% end %>
    </div>
</div>
